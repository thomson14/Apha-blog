<h1>Articles listing page</h1>

<table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan=3>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% @articles.each do |art| %>
                <tr>
                    <td><%= art.title %></td>
                    <td><%= art.description %></td>
                    <td><%= link_to 'Show', article_path(art) %></td>
                    <td><%= link_to 'edit', edit_article_path(art) %></td>
                    <td><%= link_to 'Delete', art,
                    data: {
                      "turbo-method": :delete,
                      controller: "confirmation",
                      "confirmation-message-value": 'Are you sure?',
                      action: "confirmation#confirm"
                    } %></td>
                </tr>
                <% end %>
        </tbody>
</table>
<p><%= link_to 'Create new article', new_article_path %></p>
